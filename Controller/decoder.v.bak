module decoder (
	input [3:0] sw,
	output [1:0] opcode,
	output decoding
);
	
	assign opcode = (sw == 4'b1000) ? 2'b00 : 
						(sw == 4'b0100) ? 2'b01 :
						(sw == 4'b0010) ? 2'b10 :
						(sw == 4'b0001) ? 2'b11 :
						2'b00;
						
	assign decoding = (sw == 4'b1000) ? 1'b1 : 
						(sw == 4'b0100) ? 1'b1 :
						(sw == 4'b0010) ? 1'b1 :
						(sw == 4'b0001) ? 1'b1 :
						1'b0;					
						
endmodule